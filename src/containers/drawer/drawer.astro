---
import { getCollection } from "astro:content"
import { getAbsoluteLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";

import { Page, EMAIL } from "../../shared";
import { Lang, getNextLang, getPageLabel, useTranslations } from "../../i18n";

import ThemeController from "../../components/theme-controller.astro";

import Badges from './badges.astro'
import PrintButton from "./print-button.astro";

interface Props {
  currentPage: Page;
}

const { currentPage } = Astro.props;
const lang = Astro.currentLocale as Lang;
const nextLang = getNextLang(lang);
const t = useTranslations(lang);
const projects = await getCollection("projects");
---

<div class="drawer bg-base-100 lg:drawer-open">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div
      class="navbar print:hidden z-50 sticky top-0 max-lg:bg-base-100 max-lg:shadow-md"
    >
      <div class="navbar-start">
        <label
          for="my-drawer"
          aria-label="open sidebar"
          class="btn btn-circle btn-ghost lg:hidden"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-6 h-6 stroke-current"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path></svg
          >
        </label>
      </div>
      <div class="navbar-center">
        <span class="text-lg font-bold lg:hidden"
          >{t(getPageLabel(currentPage))}</span
        >
      </div>
      <div class="navbar-end">
        <PrintButton />
      </div>
    </div>
    <!-- Page content -->
    <slot />
  </div>
  <div class="drawer-side print:hidden">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <aside
      class="p-2 h-auto min-h-full bg-base-200 text-base-content flex flex-col w-[18rem]"
    >
      <div class="w-fit mx-auto my-6 hidden lg:block">
        <div class="avatar transition ease-in-out m-auto">
          <div class="w-[9rem] rounded-full bg-base-300">
            <img src="/profile-tp2.png" loading="lazy" decoding="async" />
          </div>
        </div>
      </div>
      <ul class="menu shrink menu-md max-lg:mt-16 pb-6">
        {
          Object.values(Page).map((page) => (
            <li>
              <a
                class="text-base data-[active]:bg-base-300 py-3"
                href={getAbsoluteLocaleUrl(lang, page)}
                data-active={page === currentPage}
              >
                {t(getPageLabel(page))}
              </a>
            </li>
          ))
        }
      </ul>
      <Badges projects={projects} />
      <div class="mt-auto p-4 flex self-center justify-evenly items-center w-full">
        <a target="_blank" href="https://github.com/x0k">
          <Icon size={24} name="simple-icons:github" />
        </a>
        <a target="_blank" href={`mailto:${EMAIL}`}>
          <Icon size={24} name="lucide:mail" />
        </a>
        <ThemeController transition:persist />
        <a
          class="font-semibold"
          href={getAbsoluteLocaleUrl(nextLang, currentPage)}
        >
          {lang.toLocaleUpperCase()}
        </a>
      </div>
    </aside>
  </div>
</div>
